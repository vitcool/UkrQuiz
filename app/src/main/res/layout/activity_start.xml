<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/start_screen"
    android:background="@drawable/background_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_view"
        android:id="@+id/start_view"
        android:textSize="70dp"
        android:textColor="#fffcff1b"
        android:layout_above="@+id/start_test"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_test"
        android:src="@drawable/test"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/start_view"
        android:layout_alignStart="@+id/start_view" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_btn"
        android:src="@drawable/info_btn"
        android:background="@null"
        android:layout_alignTop="@+id/start_test"
        android:layout_alignRight="@+id/start_view"
        android:layout_alignEnd="@+id/start_view" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/about_btn"
        android:src="@drawable/about_btn"
        android:background="@null"
        android:layout_below="@+id/start_view"
        android:layout_alignLeft="@+id/start_test"
        android:layout_alignStart="@+id/start_test" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ukr_start"
        android:layout_above="@+id/start_view"
        android:layout_toRightOf="@+id/about_btn"
        android:layout_toEndOf="@+id/about_btn" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exit_button"
        android:src="@drawable/eexit_button"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>