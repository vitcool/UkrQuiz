<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:background="@drawable/background_quiz"
              android:id="@+id/mainframe"
              android:weightSum="1"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:layout_weight="0.87">

        <ImageButton
            android:id="@+id/next_button"
            android:layout_width="151dp"
            android:layout_height="151dp"
            android:src="@drawable/arrow_right"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <ImageButton
            android:id="@+id/prev_button"
            android:layout_width="151dp"
            android:layout_height="151dp"
            android:src="@drawable/arrow_left"
            android:paddingRight="10dp"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:clickable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number_qustion"
            android:layout_above="@+id/prev_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"
            android:textColor="#ff1b14ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/true_answers"
            android:layout_alignTop="@+id/number_qustion"
            android:layout_alignRight="@+id/next_button"
            android:layout_alignEnd="@+id/next_button"
            android:layout_marginRight="30dp"
            android:textColor="#ffffff0a" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:id="@+id/image_view"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="125dp"
            android:padding="24dp"
            android:id="@+id/question_text_view"
            android:background="@drawable/text_view"
            android:textColor="#FFFF00"
            android:textSize="13dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/true_button"
            android:src="@drawable/true_img_button"
            android:background="@null"
            android:layout_above="@+id/cheat_button"
            android:layout_alignLeft="@+id/cheat_button"
            android:layout_alignStart="@+id/cheat_button" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cheat_button"
            android:src="@drawable/cheat_button_img"
            android:background="@null"
            android:layout_above="@+id/false_button"
            android:layout_alignLeft="@+id/false_button"
            android:layout_alignStart="@+id/false_button" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/false_button"
            android:src="@drawable/false_button_img"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timer_quiz"
            android:id="@+id/timer_quiz"
            android:textColor="#ffff2441"
            android:textSize="20dp"
            android:layout_alignBottom="@+id/clock"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/clock"
            android:padding="10dp"
            android:src="@drawable/clock"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/image_view"
            android:layout_toStartOf="@+id/image_view" />
    </RelativeLayout>

</LinearLayout>
