<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:background="@drawable/background_main"
              android:id="@+id/mainframe"
              android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:id="@+id/question_text_view"
        android:background="@drawable/text_view"
        android:textColor="#FFFF00"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:layout_weight="0.87">

        <ImageButton
            android:id="@+id/next_button"
            android:layout_width="151dp"
            android:layout_height="151dp"
            android:src="@drawable/arrow_right"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <ImageButton
            android:id="@+id/prev_button"
            android:layout_width="151dp"
            android:layout_height="151dp"
            android:src="@drawable/arrow_left"
            android:paddingRight="10dp"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <Button
            android:id="@+id/true_button"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:background="@drawable/shape"
            android:width="1dp"
            android:textSize="20sp"
            android:layout_alignTop="@+id/cheat_button"
            android:layout_toRightOf="@+id/prev_button"
            android:layout_toEndOf="@+id/prev_button"
            android:text="@string/plus_button" />

        <Button
            android:id="@+id/false_button"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:text="@string/minus_button"
            android:background="@drawable/button_false"
            android:width="1dp"
            android:textSize="20sp"
            android:layout_alignTop="@+id/cheat_button"
            android:layout_toLeftOf="@+id/next_button"
            android:layout_toStartOf="@+id/next_button" />

        <Button
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:id="@+id/cheat_button"
            android:textSize="13sp"
            android:background="@drawable/button_cheat"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="47dp"
            android:text="@string/quest_button" />

    </RelativeLayout>

</LinearLayout>
